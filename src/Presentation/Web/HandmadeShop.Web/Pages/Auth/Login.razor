@page "/login"
@layout SimpleLayout
@inherits LoginBase

<MudStack Row="true" Justify="Justify.Center" Class="pa-6 mt-6">
    <MudItem xs="5" sm="4">
        <MudPaper Class="pa-4">
            <EditForm Model="@Model" OnValidSubmit="OnValidSubmit">

                <MudText Typo="Typo.h4" GutterBottom="true" Class="mb-3">Вход</MudText>

                <MudAlert Severity="Severity.Error" Class="@(ShowErrors ? "mb-3 d-block" : "d-none")">
                    @Error
                    <br />
                    @ErrorDetail
                </MudAlert>

                <MudTextField T="string"
                                @bind-Value="Model.Email" For="@(() => Model.Email)"
                                Label="Email"
                                HelperText="Input your email"
                                Validation="@(new EmailAddressAttribute { ErrorMessage = "The email address is invalid" })"/>
                
                <MudTextField @bind-Value="Model.Password" For="@(() => Model.Password)"
                                Label="Password"
                                HelperText="Input your password"
                                InputType="@PasswordInput"
                                Adornment="Adornment.End"
                                AdornmentIcon="@PasswordInputIcon"
                                Required="true"
                                RequiredError="Password is required!"
                                OnAdornmentClick="TogglePasswordVisibility" />
                
                <div>
                    <MudCheckBox For="@(() => Model.RememberMe)" @bind-Checked="Model.RememberMe" Label="Запомнить?" Color="Color.Primary" Class="ml-n1 my-3"></MudCheckBox>
                </div>
                
                <div Class="d-flex justify-space-between align-center">
                    <MudButton Variant="Variant.Filled"
                               Color="Color.Primary"
                               Size="Size.Large"
                               ButtonType="ButtonType.Submit">Вход</MudButton>
                    <MudLink Href="/forgot-password">Забыли пароль?</MudLink>
                </div>
                                
                <div class="mt-4 mb-4">
                    <MudText>Нет аккаунта? <MudLink Href="/register">Зарегистрируйтесь</MudLink></MudText>
                </div>
            </EditForm>
        </MudPaper>
    </MudItem>
</MudStack>
